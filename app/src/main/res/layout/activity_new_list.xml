<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.list.buffet.alvaro.buffetlist.NewListActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_margin="15dp" />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/colorAccent"
            android:ems="5"
            android:id="@+id/numberOfOrderField"
            android:inputType="number"
            android:hint="NÂº de plato"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorHighlight="@color/colorAccent"
            android:ems="5"
            android:id="@+id/quantyField"
            android:inputType="number"
            android:hint="Cantidad"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_circle_white_24dp"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:id="@+id/addButton"
            />
    </RelativeLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_marginTop="450dp"-->
        <!--android:background="@color/colorPrimary"/>-->
    <ListView
        android:id="@+id/newList"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_above="@+id/footer"
        android:drawSelectorOnTop="false" />
</RelativeLayout>
